<!DOCTYPE html>
<html lang="es">
	<% title = product.name %>
	<% page = "product" %>
	<!-- Head -->
	<%- include("./partials/head") -%>
	<body>
		<!-- Header -->
		<%- include('./partials/header') %>
		<!-- /Header -->

		<main>
			<div class="container">
				<div class="row">
					<div class="col-12">
						<h2 class="title">Estás editando: <%= product.name %></h2>
					</div>
				</div>
				<div class="col-12">
					<form action="/producto/<%= product.id %>/editar?_method=PUT" method="POST">
						<div class="row product-detail">
							<div class="col-12">
								<label for="name" class="form-label">Nombre del producto:</label>
								<input type="text" id="name" name="name" value="<%= product.name %>" class="form-input">
							</div>
							<div class="col-12 col-md-6">
								<label for="price" class="form-label">Precio del producto:</label>
								<input type="text" id="price" name="price" value="<%= product.price %>" class="form-input">
							</div>
							<div class="col-12 col-md-6">
								<label for="discount" class="form-label">Descuento:</label>
								<input type="text" id="discount" name="discount" value="<%= product.discount %>" class="form-input">
							</div>
							<div class="col-12">
								<label for="description" class="form-label">Descipción:</label>
								<textarea name="description" id="description" class="form-input"><%= product.description %></textarea>
							</div>
							<div class="col-12 d-flex justify-content-around">
								<button type="button" class="change red-button p-3 m-3 d-flex justify-content-center">
									<a href="/producto/<%= product.id %>/detalle">Cancelar</a>
								</button>
								<button type="submit" class="change green-button p-3 m-3 d-flex justify-content-center">Guardar cambios</button>
							</div>
						</div>
					</form>
				</div>
	
			</div>
			<!-- /todos los productos -->
		</main>

		<!-- footer -->
		<%- include('./partials/footer') %>
		<!-- /footer -->
	</body>	
</html>